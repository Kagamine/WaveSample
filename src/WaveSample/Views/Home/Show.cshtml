@model IEnumerable<double>
<html>
<body>
    <style>
        .wave{
            width: 1px;
            float:left;
            background: blue;
        }
    </style>
    <div style="height: 50px;overflow: hidden;transform: rotateX(180deg);">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div class="wave" style="height:@(Math.Abs((Model.ElementAt(i) * 50)).ToString("F1"))px"></div>
        }
    </div>
    <div style="height: 50px;overflow: hidden;">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div class="wave" style="height:@(Math.Abs((Model.ElementAt(i) * 50)).ToString("F1"))px"></div>
        }
    </div>
</body>
</html>